{
  "language": "scala",
  "display_name": "Spark - Scala (Mesos Cluster Mode)",
  "metadata": {
    "process_proxy": {
      "class_name": "enterprise_gateway.services.processproxies.mesos.MesosClusterProcessProxy"
    }
  },
  "env": {
    "SPARK_HOME": "/usr/hdp/current/spark2-client",
    "__TOREE_SPARK_OPTS__": "--master mesos://127.0.0.1:7077 --name ${KERNEL_ID:-ERROR__NO__KERNEL_ID} --conf spark.master.rest.enabled=true --conf spark.driver.supervise=true --conf spark.submit.deployMode=cluster ${KERNEL_EXTRA_SPARK_OPTS}",
    "__TOREE_OPTS__": "--alternate-sigint USR2",
    "LAUNCH_OPTS": "",
    "DEFAULT_INTERPRETER": "Scala"
  },
  "argv": [
    "/usr/local/share/jupyter/kernels/spark_scala_mesos_cluster/bin/run.sh",
    "--RemoteProcessProxy.kernel-id",
    "{kernel_id}",
    "--RemoteProcessProxy.response-address",
    "{response_address}",
    "--RemoteProcessProxy.port-range",
    "{port_range}",
    "--RemoteProcessProxy.spark-context-initialization-mode",
    "lazy"
  ]
}
